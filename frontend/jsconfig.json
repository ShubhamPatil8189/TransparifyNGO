{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* JavaScript project options */
    "allowJs": true,
    "checkJs": false,

    /* Remove TS-strict rules for JS projects */
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "skipLibCheck": true,

    /* React JSX support */
    "jsx": "react-jsx"
  },

  "include": ["src"]
}


